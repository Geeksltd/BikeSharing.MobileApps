<?xml version="1.0"?>
<z-Component z-type="EventSummaryModule" z-base="Stack" z-namespace="UI.Modules" z-partial="true"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../.zebble-schema.xml">
  <TextView Id="title" Text="Event"   />
  <ScrollView  ShowHorizontalScrollBars="true" Style.Height="200" ShowScroll="true" ShowVerticalScrollBars="true" Direction="Horizontal" > 
  <ListView z-of="Event, Row" Id="List" EmptyText="Empty list" DataSource="@Items" Direction="Horizontal"    >
    <z-Component z-type="Row" z-partial="true" z-base="ListViewItem[Event]" Style.Height="100%">
      <Stack Id ="rowStack" BackgroundImagePath="@Item.ImagePath" Direction="Vertical">      
        <Stack>  
            <TextView Text="@Item.Name" Id="EventName"  />
            <TextView Text="@Item.Venue.Name"/>
            <TextView Text="@Item.StartTimeString"/>
            <TextView Text="GlobalSettings.City"/>
      </Stack>
      </Stack>
    </z-Component>
  </ListView>
    </ScrollView>
</z-Component>